
<% layout("layouts/boilerplate") -%>


<div class="row">
        <div class="col-6 offset-3">


            <h3 class="col-6 offset-3 mt-5">Login On WanderLust</h3>
            <form action="/login" method="POST" class="needs-validation" novalidate>

                <label for="username" class="form-label mt-2">Username</label>
                <input type="text" name="username" id="username" class="form-control border border-primary" required>
                <div class="valid-feedback">Looks Good!</div>


                <label for="password" class="form-label mt-2">Password</label>
                <input type="password" name="password" id="password" class="form-control border border-primary" required>
               
                <button class="btn btn-outline-success mt-3">Login</button>


            </form>

            <li style="list-style: none;" class="mt-2">Don't have an account?<a href="/signup">Signup</a></li>

        </div>
</div>